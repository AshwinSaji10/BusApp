<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receipt"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receipt"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="top|center"
        android:layout_marginBottom="48dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Trip_id:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvTripId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="1"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Aadhaar:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvAadhaar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="xxxx xxxx xxxx"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvUname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="John"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Model:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvModel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="Volvo"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Start:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvStart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="COK"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Dest:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvDest"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="BLR"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="2023-5-15"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="09:40"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Seats:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tvSeats"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="2"
            android:textSize="18sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Please Take Screenshot of Your Receipt!"
        android:textSize="18sp"
        />



</LinearLayout>